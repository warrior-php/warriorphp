<div class="dark-transparent sidebartoggler"></div>
{% block js %}
    <script type="text/javascript">
        Do('base', () => {
            // 退出登录
            $('#LogOut').actUrl({}, (rel) => {
                toastr.success(rel.msg);
                setTimeout(function () {
                    if (rel.hasOwnProperty('url')) window.location.replace(rel.url);
                    else window.location.reload();
                }, 1000);
            });
        });
    </script>
{% endblock %}
</body>
</html>