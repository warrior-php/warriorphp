                                            <div class="d-flex align-items-center">
                                                <div class="user-profile-img">
                                                    <img src="{{ __ASSETS__('images/profile/user-1.jpg') }}" class="rounded-circle" width="36" height="36" alt="modernize-img"/>
                                                </div>
                                            </div>
